<%- contentFor('body') %>
<div class="content">

  <div id="xml-new" class="columns is-mobile js-panel is-hidden">
    <div class="column is-three-fifths is-offset-one-fifth">
      <div class="card">
        <div class="card-content">
          <div class="content">
            <div class="field">
              <label class="label">Name</label>
              <div class="control">
                <input class="input" type="text" placeholder="e.g Alex Smith">
                <p class="help is-danger">This username is available</p>
              </div>
            </div>

            <div class="field">
              <label class="label">URL</label>
              <div class="control">
                <input class="input" type="email" placeholder="e.g. www.google.com/rss.xml">
              </div>
            </div>

            <div class="field">
              <label class="label">Max Size (MB)</label>
              <div class="control">
                <input class="input" type="number" min="1">
              </div>
            </div>

            <div class="field">
              <div class="control">
                <label class="checkbox">
                  <input type="checkbox">
                  Enabled
                </label>
              </div>
            </div>

            <div class="control">
              <button class="button is-primary">Create</button>
              <button class="button is-danger">Cancel</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="xml-list"  class="columns is-mobile js-panel">
    <div class="column">
      <div class="card">
        <div class="card-content">
          <div class="content">
            <table>
              <thead>
                <tr>
                  <th>Name</th>
                  <th>URL</th>
                  <th>Time</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th>Test</th>
                  <th>www.google.com</th>
                  <th>1.3 s</th>
                </tr>
                <tr>
                  <th>Test</th>
                  <th>www.google.com</th>
                  <th>1.3 s</th>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
</div>
